<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BbOddsJcHistMapper">
	
	<sql id="TAB_NAME">cbs_bb_odds_jc_hist</sql>
	
	<select id="selectListByContestId" resultType="com.lifeix.cbs.contest.dto.odds.OddsJcHist">
		SELECT  
		id,
		contestId,
		handicap,
		homeRoi,
		awayRoi,
		company,
		createTime 
		FROM 
		<include refid="TAB_NAME" />   
		<where> 
			contestId = #{contestId} 
	        <choose>  
		        <when test="startId != null">  
		            AND id &lt; #{startId}  
		            ORDER BY id DESC 
		        </when>
		        <when test="endId != null">  
		            AND id &gt; #{endId}  
		            ORDER BY id ASC 
		        </when>  
		        <otherwise>  
	            	ORDER BY id DESC 
	       	 	</otherwise>    
		    </choose>  
	    </where>
		LIMIT #{num} 
	</select>
	
	<insert id="saveOddsHist" parameterType="java.util.List">
		INSERT INTO <include refid="TAB_NAME" />  
		    (contestId,handicap,homeRoi,awayRoi,company,createTime)  
	    VALUES  
	    <foreach collection="list" index="index" item="item" separator=",">  
	        (#{item.contestId},#{item.handicap},#{item.homeRoi},#{item.awayRoi},#{item.company},NOW()) 
	    </foreach>  
	</insert>
	
</mapper>